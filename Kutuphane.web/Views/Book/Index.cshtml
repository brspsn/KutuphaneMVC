@model List<Book>

    <a class="btn btn-warning" asp-controller="Book" asp-action="Add">Kitap adı giriniz</a>

<table class="table table-striped table-hover">
   <thead>
       <tr>
            <th>ıd</th>
            <th>Kitap adı</th>
            <th>sayfa sayısı</th>
            <th>ISBM Kodu</th>
            <th>Dijital mi?</th>
            <th>Categori</th>
            <th>İşlemler</th>
       </tr>
   </thead>
   <tbody>
        @foreach(Book item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.PageCount</td>
                <td>@item.IsDigital</td>
                <td>@item.Category</td>
                <td>
                    <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-controller="Author" asp-action="Delete" asp-route-id="" class="btn btn-                                                     danger">Sil</a>
                    <a asp-controller="Author" asp-action="Edit" asp-route-id="" class="btn btn-success">Düzenle</a>

                </td>


            </tr>
        }

   </tbody>

</table>
@model List<Publisher>

    <a class="btn btn-warning" asp-action="add" asp-controller="Publisher">Yayın evi Ekle</a>
    <table class="table table-striped table-hover">

        <thead>
            <tr>
                <th>Id</th>
                <th>YayınEvi Adı</th>
                <th>adress</th>
                <th>islemler</th>

            </tr>

        </thead>
        <tbody>
        @foreach(Publisher publisher in Model)
        {
            <tr>

                <td>@publisher.Id</td>
                <td>@publisher.Name</td>
                <td>@publisher.Address</td>
                <td>
                    <a onclick="return confirm('Silmek istediğinizden emin misiniz?')" asp-controller="Publisher" asp-action="Delete" asp-route-id="@publisher.Id" class="btn btn-danger">Sil</a>
                    <a asp-controller="Publisher" asp-action="edit" asp-route-id="@publisher.Id" class="btn btn-success">Düzenle</a>
                </td>
            </tr>
        }
        </tbody>




    </table>
@model List<Category>

<a asp-controller="Category" asp-action="Add" class="btn btn-primary">Kategori ekle</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Ad</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category item in Model)
        {
            <tr>
                <td>@item.Name</td>
                
                <td> <a class="btn btn-danger" asp-action="Delete" asp-controller="Book" asp-route-id="@item.Id">Sil </a></td>

            </tr>
        }
    </tbody>
</table>

